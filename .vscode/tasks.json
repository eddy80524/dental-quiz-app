{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "歯科国試アプリ起動",
            "type": "shell",
            "command": "./start_app.sh",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "キャッシュクリア",
            "type": "shell",
            "command": "find . -type d -name '__pycache__' -exec rm -rf {} + 2>/dev/null || true; find . -name '*.pyc' -delete 2>/dev/null || true; rm -rf ~/.streamlit 2>/dev/null || true; rm -rf .streamlit 2>/dev/null || true; echo 'キャッシュをクリアしました'",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Firebase Functions ビルド",
            "type": "shell",
            "command": "npm run build",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/functions"
            },
            "problemMatcher": ["$tsc"]
        }
    ]
}
